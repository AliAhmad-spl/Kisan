<div class="modal fade" id="item_reservations_modal" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add item quantity</h4>
      </div>
      <div class="modal-body">
        <%= form_for LineItem.new, url: add_to_cart_path do |form| %>
          <%= form.hidden_field :item_id %>
          <%= form.hidden_field :price %>
          <div class="field">
            <%= form.label 'Quantity' %>
            <%= form.number_field :quantity, class: 'form-control', min: 0, required: true, autofocus: true, onchange: "check_item_quantity(this)" %>
          </div> 
          <h5 style="color: red; display: none;" id="item_quantity_error" ></h5>         
      </div>
      <div class="modal-footer">
        <%#= link_to "Add to Cart", line_items_path(:product_id => product), :method => :post %>
        <%= form.submit "Add Item", class: 'btn btn-success pull-left', disabled: true, id: 'add_item_submit_btn' %>
        <% end %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>